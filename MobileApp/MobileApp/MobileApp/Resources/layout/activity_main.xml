<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeText" />
    <Button
        android:text="@string/counter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counterButton" />
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counterText" />
    <Button
        android:text="@string/to_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toCalculator" />
    <Button
        android:text="@string/to_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toWeb" />
    <Button
        android:text="@string/to_essentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toEssentials" />
    <Button
        android:text="@string/to_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toList" />
    <Button
        android:text="@string/to_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toWeather" />

</LinearLayout>